<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-light px-4" style="background-color: #e3f2fd;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="fw-bold">Jorni Tours</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto mb-2 mb-md-0 gap-3">
          {{!-- admin --}}
          {{#if loginUser.isAdmin}}
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/admin" class="text-danger nav-link">Admin Backstage</a>
          </li>
          {{/if}}

          {{!-- email --}}
          <li class="nav-item d-inline-flex align-items-center">
            <span class="text-dark nav-link"><strong>Hi, {{#if
                loginUser}}{{loginUser.email}}{{else}}Visitor{{/if}}</strong></span>
          </li>

          {{!-- cart --}}
          <li class="nav-item">
            <a href="/cart" class="btn btn-sm">
              <i class="fas fa-shopping-cart fa-2x"></i>
              {{#if session.cartAmount}}
              <span class="badge rounded-pill badge-danger text-danger bg-light">{{session.cartAmount}}</span>
              {{/if}}
            </a>
          </li>

          {{#if loginUser}}
          {{!-- profile --}}
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/users/{{loginUser.id}}" class="nav-link">Profile</a>
          </li>

          {{!-- favorite --}}
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/favorite" class="nav-link">My Favorite</a>
          </li>

          {{!-- order --}}
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/orders" class="nav-link">Order management</a>
          </li>

          {{!-- logout --}}
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/logout">
              <button class="btn btn-outline-danger my-sm-0 my-2">Logout</button>
            </a>
          </li>
          {{else}}
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/login">
              <button class="btn btn-outline-success my-sm-0 my-2">Login/Register</button>
            </a>
          </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>