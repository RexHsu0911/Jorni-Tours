<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">Login</h1>
</div>

<form class="form-login" action="/login" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="email">Email</label>
    <input class="form-control" id="email" type="text" name="email" class="form-control" placeholder="Enter email" required autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">Password</label>
    <input class="form-control" id="password" type="password" name="password" class="form-control"
      placeholder="Enter password" required>
  </div>

  <button class="btn btn-primary btn-block" type="submit">Submit</button>
</form>

<div class="mb-4 text-center">
  <p><a href="/register">Register</a></p>
</div>