{{> group-tour-tabs route='index'}}

{{!-- categories --}}
<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=All">All</a>
  </li>

  {{#each categories}}
  <li class="nav-item">
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}" href="?categoryId={{this.id}}">{{this.name}}</a>
  </li>
  {{/each}}
</ul>

{{!-- groupTours --}}
<div class="row mt-3">
  {{#each groupTours}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <a href="/group-tours/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
      <div class="card-body">
        <p class="card-text">
          <a href="/group-tours/{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <span class="badge bg-secondary">{{this.Category.name}}</span>
        {{!-- .text-truncate 使用刪節號截斷較長的字串 --}}
        <p class="card-text text-truncate">{{this.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{!-- pagination --}}
<nav class="mt-3" aria-label="page navigation">
  <ul class="pagination col justify-content-center">
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="/group-tours?page={{pagination.prev}}&categoryId={{#if categoryId}}{{categoryId}}{{else}}All{{/if}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/group-tours?page={{this}}&categoryId={{#if ../categoryId}}{{../categoryId}}{{else}}All{{/if}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}

    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/group-tours?page={{pagination.next}}&categoryId={{#if categoryId}}{{categoryId}}{{else}}All{{/if}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>