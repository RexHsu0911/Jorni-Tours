<div class="card">
  <div class="row align-items-center no-gutters">
    <div class="col-md-4">
      {{#if user.avatar}}
      <img src="{{user.avatar}}" width="300px" height="300px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{else}}
      {{!-- 預設 user 大頭貼 --}}
      <img src="https://fakeimg.pl/300" width="300px" height="300px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{/if}}
    </div>
    <div class="col-md-6 mx-auto">
      <div class="card-body">
        <h5 class="card-title">{{user.firstName}} {{user.lastName}}</h5>

        <p class="card-text">{{user.email}}</p>

        <p class="card-text">{{user.description}}</p>

        <p class="card-text mb-5">
          <strong>{{user.commentedGroupTours.length}}</strong> Commented Group Tours
        </p>

        {{#ifCond loginUser.id user.id}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
        {{/ifCond}}

        <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    {{!-- commentedGroupTours --}}
    <br />
    {{#if user.commentedGroupTours}}
    <div class="card">
      <div class="card-header">
        <strong>{{user.commentedGroupTours.length}}</strong> Commented Group Tours
      </div>
      <div class="card-body">
        {{#each user.commentedGroupTours}}
        <a href="/group-tours/{{this.id}}" class="text-decoration-none">
          <img src="{{this.image}}" width="60" height="60" class="avatar m-1"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
        </a>
        {{/each}}
      </div>
    </div>
    {{/if}}
    
  </div>
</div>