<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-row mb-3">
    <label class="form-label" for="firstName">First Name</label>
    <input class="form-control" type="text" name="firstName" id="firstName" placeholder="Enter first name"
      value="{{user.firstName}}" required>
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="lastName">Last Name</label>
    <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Enter last name"
      value="{{user.lastName}}" required>
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="gender">Gender</label>
    <select class="form-select" name="gender" id="gender">
      <option selected>Type to choose...</option>
      <option value="Male" {{#ifCond user.gender 'Male' }}selected{{/ifCond}}>Male</option>
      <option value="Female" {{#ifCond user.gender 'Female' }}selected{{/ifCond}}>Female</option>
    </select>
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="birthday">Birthday</label>
    <input class="form-control" type="date" name="birthday" id="birthday" value="{{user.birthday}}">
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="country">Country</label>
    <input class="form-control" type="text" name="country" id="country" placeholder="Enter country"
      value="{{user.country}}">
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="phone">Phone</label>
    <input class="form-control" type="tel" name="phone" id="phone" placeholder="Enter phone" value="{{user.phone}}">
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="avatar">Avatar</label>
    <input class="form-control" type="file" class="form-control-file" id="avatar" name="avatar">
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3">{{user.description}}</textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</form>